<body class="bg-gray-100 p-4 sm:p-6">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
        <div class="bg-blue-600 p-6 text-center">
            <h1 class="text-3xl font-bold text-white">Sorikama</h1>
        </div>
        
        <div class="p-6 sm:p-8 text-gray-700">
            {{{body}}}
        </div>
        
        <div class="bg-gray-50 text-center p-6 border-t border-gray-200">
            <p class="text-xs text-gray-500">&copy; {{currentYear}} Sorikama. Tous droits réservés.</p>
            <p class="text-xs text-gray-500 mt-1">Cotonou, Bénin</p>
        </div>
    </div>
