# Application
NODE_ENV=development
PORT=7000
BASE_URL=http://localhost:7000/api/v1
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:7000

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_REFRESH_EXPIRES_IN="7d"

# Services
MAISONS_SERVICE_URL=http://localhost:3001
UTILISATEURS_SERVICE_URL=http://localhost:3002
MASEBUY_SERVICE_URL=http://localhost:8000

# Rate Limiter
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# MongoDB
MONGO_URI=mongodb://localhost:27017/sorikama_gateway

# Default Admin User for Seeding
DEFAULT_ADMIN_EMAIL=admin@sorikama.com
DEFAULT_ADMIN_PASSWORD=Admin@123

# Admin Portal Authentication
PORTAL_USERNAME=admin
PORTAL_PASSWORD=YourSecurePassword123!
PORTAL_PASSWORD_HASH=$2b$12$example_hash_here

# Encryption (32 characters exactly)
ENCRYPTION_KEY=your_32_character_encryption_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=awarrisw@gmail.com
SMTP_PASS=zjcuqitovwjpfuqb
EMAIL_FROM=noreply@sorikama.com

# Security
BLIND_INDEX_PEPPER=your_pepper_here
HMAC_SECRET=your_hmac_secret_key_here
VERIFY_HMAC_SIGNATURE=true
SIGNATURE_MAX_AGE=300

# ============================================
# PROXY CONFIGURATION
# ============================================

# Timeouts (en millisecondes)
PROXY_TIMEOUT=30000
PROXY_CONNECTION_TIMEOUT=5000
PROXY_RESPONSE_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_USE_REDIS=false

# Cache
PROXY_CACHE_ENABLED=true
PROXY_CACHE_TTL=0
PROXY_CACHE_USE_REDIS=false

# Logging
PROXY_LOG_LEVEL=info
PROXY_LOG_REQUESTS=true
PROXY_LOG_RESPONSES=true
PROXY_LOG_HEADERS=false
PROXY_LOG_BODY=false

# Performance
SLOW_REQUEST_THRESHOLD=1000
PROXY_COMPRESSION=true
COMPRESSION_THRESHOLD=1024

# Redis (optionnel - pour production)
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=sorikama:proxy:
REDIS_CONNECT_TIMEOUT=5000